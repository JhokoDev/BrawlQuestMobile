<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/questsscreen">

    <!-- Título -->
    <TextView
        android:id="@+id/statusTitle"
        style="@style/TitleText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30pt"
        android:shadowColor="@color/azul_branca_clara"
        android:shadowRadius="5"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- TextView para "orientação de quest - fortalecimento do corpo" -->
    <TextView
        android:id="@+id/tv_orientacao"
        style="@style/MinText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="#FFFFFF"
        android:textSize="9pt"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btn_flexoes"
        style="@style/MinText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0 / 20"
        android:shadowRadius="4"
        android:gravity="end|top"
        android:shadowColor="@color/azul_branca_clara"
        android:background="@android:color/transparent"
        app:autoSizeTextType="uniform"
    app:layout_constraintWidth_percent="0.765"
    app:layout_constraintHeight_percent="0.067"
    app:layout_constraintHorizontal_bias="0.45"
    app:layout_constraintVertical_bias="0.325"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btn_abdominais"
        style="@style/MinText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0 / 20"
        android:shadowRadius="4"
        android:gravity="end|top"
        android:shadowColor="@color/azul_branca_clara"
        android:background="@android:color/transparent"
        app:autoSizeTextType="uniform"
    app:layout_constraintWidth_percent="0.765"
    app:layout_constraintHeight_percent="0.067"
    app:layout_constraintHorizontal_bias="0.45"
    app:layout_constraintVertical_bias="0.395"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btn_agachamentos"
        style="@style/StandardText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0 / 20"
        android:shadowRadius="4"
        android:gravity="end|top"
        android:shadowColor="@color/azul_branca_clara"
        android:background="@android:color/transparent"
        app:autoSizeTextType="uniform"
        app:layout_constraintWidth_percent="0.765"
        app:layout_constraintHeight_percent="0.067"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintVertical_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btn_correr"
        style="@style/MinText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0 / 1"
        android:shadowRadius="4"
        android:gravity="end|top"
        android:shadowColor="@color/azul_branca_clara"
        android:background="@android:color/transparent"
        app:autoSizeTextType="uniform"
    app:layout_constraintWidth_percent="0.765"
    app:layout_constraintHeight_percent="0.067"
    app:layout_constraintHorizontal_bias="0.3"
    app:layout_constraintVertical_bias="0.54"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Button para voltar -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:text="Voltar"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Button para recompensa -->
    <Button
        android:id="@+id/btn_reco2"
        style="@style/MinText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Coletar Recompensa"
        android:textSize="13pt"
        android:background="@android:color/transparent"
        android:shadowRadius="4"
        android:shadowColor="@color/azul_branca_clara"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.73"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Button para atalho -->
    <Button
        android:id="@+id/btn_atalho"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Atalho"
        android:visibility="invisible"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Botão central inferior existente -->
    <ImageButton
        android:id="@+id/btn_back_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/missao"
        android:background="@android:color/transparent"
        android:contentDescription="@string/back_button"
        style="@style/CustomImageButton"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Botão 1 - 0° -->
    <ImageButton
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:scaleType="fitCenter"
        android:layout_height="0dp"
        android:src="@drawable/creditos"
        android:background="@android:color/transparent"
        android:contentDescription="@string/creditos_button"
        style="@style/CustomImageButton"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" />

    <!-- Botão 2 - 30° -->
    <ImageButton
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/inventario"
        android:background="@android:color/transparent"
        android:contentDescription="@string/inventario_button"
        style="@style/CustomImageButton"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintVertical_bias="0.87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" />

    <!-- Botão 3 - 60° -->
    <ImageButton
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/maps"
        android:background="@android:color/transparent"
        android:contentDescription="@string/maps_button"
        style="@style/CustomImageButton"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintVertical_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" />

    <!-- Botão 4 - 90° -->
    <ImageButton
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:scaleType="fitCenter"
        android:layout_height="0dp"
        android:src="@drawable/status"
        android:background="@android:color/transparent"
        android:contentDescription="@string/missao_button"
        style="@style/CustomImageButton"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.79"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" />

    <!-- Botão 5 - 120° -->
    <ImageButton
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:scaleType="fitCenter"
        android:layout_height="0dp"
        android:src="@drawable/loja"
        android:background="@android:color/transparent"
        android:contentDescription="@string/loja_button"
        style="@style/CustomImageButton"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintVertical_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" />

    <!-- Botão 6 - 150° -->
    <ImageButton
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:scaleType="fitCenter"
        android:layout_height="0dp"
        android:src="@drawable/ajuda"
        android:background="@android:color/transparent"
        android:contentDescription="@string/ajuda_button"
        style="@style/CustomImageButton"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintVertical_bias="0.87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" />

    <!-- Botão 7 - 180° -->
    <ImageButton
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/configuracoes"
        android:background="@android:color/transparent"
        android:contentDescription="@string/configuracoes_button"
        style="@style/CustomImageButton"
        android:scaleType="fitCenter"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>